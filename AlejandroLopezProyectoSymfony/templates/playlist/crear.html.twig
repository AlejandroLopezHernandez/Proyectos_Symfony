{# templates/playlist/crear.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <h1>Crear Nueva Playlist</h1>
    {{ form_start(form, {'attr': {'id': 'crear-playlist-form'}}) }}
        {{ form_row(form.nombre) }}
        {{ form_row(form.visibilidad) }}
        <label for="canciones">Selecciona Canciones:</label>
        <select id="canciones" name="canciones[]" multiple>
            {% for cancion in canciones %}
                <option value="{{ cancion.id }}">{{ cancion.titulo }} - {{ cancion.autor }}</option>
            {% endfor %}
        </select>
        <button type="submit">Guardar Playlist</button>
    {{ form_end(form) }}
{% endblock %}
